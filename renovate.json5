// Note: we use JSON5 to be able to use comments
{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:base",
    ":disableRateLimiting",
    ":rebaseStalePrs"
  ],
  baseBranches: [
    "main"
  ],

  regexManagers: [
    {
      fileMatch: ["cf-cli/cf-cli_spec\\.rb$"],
      matchStrings: [
        "RUBY_VERSION=(?<currentValue>[a-z0-9\\.\\-]+)"
      ],
//      depNameTemplate: "ruby",
//      datasourceTemplate: "docker",
      depNameTemplate: "crossplane/crossplane",
      datasourceTemplate: "github-tags",
      "versioningTemplate": "loose",
      "extractVersionTemplate": "^v(?<version>.*)"

    },
    {
      "fileMatch": ["cf-cli/docker-images-versions-vars\\.yaml$"],
      "matchStrings": [
        "(?<depName>[a-z0-9/\\-_]*?): \"(?<currentValue>[a-z0-9\\.\\-]*?)\""
      ],
      "datasourceTemplate": "github-tags",
      "versioningTemplate": "loose"
    },
  ]
}



